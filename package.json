{
  "name": "finishing-touch",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "dev": "pnpm db:up && pnpm --filter @finishing-touch/shared build && pnpm --filter @finishing-touch/api prisma:deploy && pnpm --filter @finishing-touch/api prisma:seed && concurrently -k -n API,WEB -c cyan,magenta \"pnpm --filter @finishing-touch/api start:dev\" \"pnpm --filter @finishing-touch/web dev\"",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "test": "pnpm --filter @finishing-touch/api test",
    "test:e2e": "pnpm --filter @finishing-touch/api test:e2e",
    "db:up": "docker compose up -d postgres",
    "db:down": "docker compose down",
    "db:logs": "docker compose logs -f postgres",
    "prisma:migrate": "pnpm --filter @finishing-touch/api prisma:migrate",
    "prisma:deploy": "pnpm --filter @finishing-touch/api prisma:deploy",
    "prisma:seed": "pnpm --filter @finishing-touch/api prisma:seed",
    "postinstall": "pnpm --filter @finishing-touch/shared build && pnpm --filter @finishing-touch/api prisma:generate"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
